PORT=5001
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/teambuilder
JWT_SECRET=your_random_64_char_secret_here
JWT_REFRESH_SECRET=your_random_64_char_refresh_secret_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth (optional — app works without it)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:5001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# AI Provider — pick one: gemini | openai | claude | groq
AI_PROVIDER=gemini
GEMINI_API_KEY=your-gemini-key
GEMINI_MODEL=gemini-2.5-flash
OPENAI_API_KEY=your-openai-key
CLAUDE_API_KEY=your-claude-key
GROQ_API_KEY=your-groq-key

NODE_ENV=development
